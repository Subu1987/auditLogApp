<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified">
    
    <Dialog
        title="Upload Audit File"
        draggable="true"
        resizable="true"
        contentWidth="400px"
        contentHeight="200px">

        <VBox class="sapUiSmallMargin">
            <unified:FileUploader
                name="uploadFile"
                width="100%"
                fileType="csv,xlsx"
                placeholder="Choose a file..." />
                <!-- Remove inline handlers -->
        </VBox>

        <beginButton>
            <Button text="Upload" type="Emphasized" />
            <!-- Remove press handler -->
        </beginButton>
        <endButton>
            <Button text="Cancel" />
            <!-- Remove press handler -->
        </endButton>
    </Dialog>
</core:FragmentDefinition>